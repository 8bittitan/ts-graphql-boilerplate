{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    // "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["./src/**/*.ts"]
}
